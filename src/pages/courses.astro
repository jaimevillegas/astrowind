---
import Layout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import CourseModal from '~/components/ui/CourseModal.astro';
import { Image } from 'astro:assets';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'JV Dev Solutions - Cursos Ofrecidos',
};

import cursoChapa from '../assets/images/courses/chapa.png';
import cursoEstructuras from '../assets/images/courses/estructuras.png';
import cursoEDM from '../assets/images/courses/edm.png';
import cursoMatlab from '../assets/images/courses/matlab.png';
import cursoSuperficies from '../assets/images/courses/superficies.png';
import cursoPseint from '../assets/images/courses/pseint.png';

const courses = [
  {
    title: 'Introducción a la Programación con PSeInt',
    description: 'Descubre los fundamentos de la programación con PSeInt, una herramienta diseñada para principiantes. Aprende a desarrollar algoritmos y resolver problemas de manera lógica y estructurada, sentando las bases para tu futuro en el mundo de la programación.',
    image: cursoPseint,
    link: 'https://www.udemy.com/course/programacion-pseint/?referralCode=990BDFA6D7C1347AD6FC',
    duration: '8 horas',
    level: 'Principiante',
    students: '500+ estudiantes',
    videoUrl: 'https://www.youtube.com/embed/dQw4w9WgXcQ',
    highlights: [
      'Conceptos básicos de programación',
      'Desarrollo de algoritmos paso a paso',
      'Estructuras de control (if, while, for)',
      'Funciones y procedimientos',
      'Resolución de problemas prácticos',
      'Ejercicios prácticos y proyectos'
    ]
  },
  {
    title: 'Elementos de Máquinas con SOLIDWORKS: Engranajes',
    description: 'Domina el diseño de engranajes utilizando SolidWorks. Este curso te guiará a través de los conceptos esenciales y las técnicas prácticas para crear modelos precisos y funcionales de engranajes, mejorando tus habilidades en diseño mecánico y CAD.',
    image: cursoEDM,
    link: 'https://www.udemy.com/course/elementos-de-maquinas-con-solidworks-engranajes/?referralCode=E9DFDAB65D067A6AD222',
    duration: '12 horas',
    level: 'Intermedio',
    students: '300+ estudiantes',
    highlights: [
      'Teoría de engranajes y transmisiones',
      'Modelado 3D de engranajes rectos y helicoidales',
      'Análisis de movimiento y fuerzas',
      'Ensamblajes complejos con engranajes',
      'Simulación y validación de diseños',
      'Cálculos de engranajes y relaciones de transmisión'
    ]
  },
  {
    title: 'Experto en Modelado de Superficies con SOLIDWORKS',
    description: 'Conviértete en un experto en modelado de superficies con SOLIDWORKS. Aprende a crear diseños complejos y detallados utilizando técnicas avanzadas de modelado de superficies, perfeccionando tus habilidades para proyectos de ingeniería y diseño industrial.',
    image: cursoSuperficies,
    link: 'https://www.udemy.com/course/experto-en-modelado-de-superficies-con-solidworks/?referralCode=CAE5C627EB9801A09B8F',
    duration: '15 horas',
    level: 'Avanzado',
    students: '200+ estudiantes',
    highlights: [
      'Técnicas avanzadas de superficies',
      'Modelado orgánico y formas complejas',
      'Continuidad de superficies G0, G1, G2',
      'Reparación y optimización de superficies',
      'Casos prácticos de diseño industrial',
      'Herramientas especializadas de superficie'
    ]
  },
  {
    title: 'MATLAB desde Cero',
    description: 'Empieza tu viaje en el mundo de la programación con MATLAB desde cero. Aprende a utilizar esta poderosa herramienta para resolver problemas matemáticos, analizar datos y desarrollar algoritmos, sin necesidad de experiencia previa.',
    image: cursoMatlab,
    link: 'https://www.udemy.com/course/matlab-desde-cero-practico/?referralCode=E312D377982F89738C36',
    duration: '10 horas',
    level: 'Principiante',
    students: '400+ estudiantes',
    highlights: [
      'Fundamentos de MATLAB y su entorno',
      'Operaciones con matrices y vectores',
      'Programación estructurada en MATLAB',
      'Visualización de datos y gráficos',
      'Análisis numérico y estadístico',
      'Aplicaciones prácticas en ingeniería'
    ]
  },
  {
    title: 'Diseño con Chapa Metálica en SOLIDWORKS',
    description: 'Aprende a diseñar con chapa metálica en SOLIDWORKS y lleva tus habilidades de modelado al siguiente nivel. Este curso te enseñará a crear piezas precisas y eficientes, desde el concepto hasta la fabricación, utilizando las herramientas especializadas de SOLIDWORKS.',
    image: cursoChapa,
    link: 'https://www.udemy.com/course/diseno-con-chapa-metalica-en-solidworks/?referralCode=EBE7ED729D71DDCCD8AA',
    duration: '8 horas',
    level: 'Intermedio',
    students: '250+ estudiantes',
    highlights: [
      'Herramientas específicas de chapa metálica',
      'Técnicas de doblado y conformado',
      'Desarrollo de piezas complejas',
      'Cálculo de desenvolvimientos',
      'Preparación para fabricación',
      'Optimización de procesos de manufactura'
    ]
  },
  {
    title: 'Estructuras con SOLIDWORKS: De cero a Avanzado',
    description: 'Domina el diseño de estructuras con SOLIDWORKS, desde los conceptos básicos hasta técnicas avanzadas. Aprende a crear y analizar estructuras complejas, mejorando tus habilidades en ingeniería y diseño estructural con este completo curso.',
    image: cursoEstructuras,
    link: 'https://www.udemy.com/course/estructuras-con-solidworks/?referralCode=172F393B69540502B581',
    duration: '14 horas',
    level: 'Intermedio a Avanzado',
    students: '180+ estudiantes',
    highlights: [
      'Diseño de estructuras metálicas',
      'Weldments y perfiles estructurales',
      'Análisis estático con Simulation',
      'Optimización de diseños estructurales',
      'Documentación técnica y planos',
      'Normativas y códigos de construcción'
    ]
  },
];
---

<Layout metadata={metadata}>
  <Fragment slot="announcement"></Fragment>
  <Fragment slot="header">
    <Header
      links={[
        { text: 'Inicio', href: '/' },
        { text: 'Proyectos', href: '/projects' },
        { text: 'Cursos', href: '/courses' },
        { text: 'Blog', href: '/blog' },
        { text: 'Github', href: 'https://github.com/jaimevillegas' },
      ]}
      actions={[
        {
          text: 'Contáctame',
          href: '/contact#form',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-center mt-8 mb-6">Cursos Ofrecidos</h1>
    
    <div class="text-center max-w-3xl mx-auto mb-12">
      <p class="text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
        Descubre una amplia gama de cursos especializados diseñados para impulsar tu carrera profesional. 
        Desde programación básica hasta diseño avanzado con SOLIDWORKS, cada curso está creado con 
        contenido práctico y ejemplos del mundo real para garantizar un aprendizaje efectivo.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {
        courses.map((course, index) => (
          <div 
            class="bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-700 rounded-xl shadow-lg overflow-hidden transition-all duration-300 ease-in-out hover:shadow-xl hover:scale-[1.02] hover:border-orange-500 dark:hover:border-orange-400 group cursor-pointer"
            onclick={`openModal('course-modal-${index}')`}
          >
            <div class="relative overflow-hidden">
              <Image
                src={course.image}
                alt={course.title}
                class="w-full h-48 object-cover transition-transform duration-300 group-hover:scale-105"
                height={300}
                width={400}
                sizes="(max-width: 768px) 100vw, (max-width: 1024px) 50vw, 33vw"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute top-4 right-4 bg-white/90 dark:bg-gray-900/90 rounded-full p-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                <Icon name="tabler:zoom-in" class="w-5 h-5 text-gray-700 dark:text-gray-300" />
              </div>
            </div>
            <div class="p-6">
              <div class="flex items-center gap-2 mb-2 text-xs text-gray-500 dark:text-gray-400">
                <span class="bg-orange-100 dark:bg-orange-900/30 text-orange-600 dark:text-orange-400 px-2 py-1 rounded-full">
                  {course.level}
                </span>
                <span class="flex items-center gap-1">
                  <Icon name="tabler:clock" class="w-3 h-3" />
                  {course.duration}
                </span>
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 line-clamp-2">{course.title}</h3>
              <p class="text-gray-600 dark:text-gray-400 text-sm leading-relaxed mb-4 line-clamp-3">{course.description}</p>
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500 dark:text-gray-400 flex items-center gap-1">
                  <Icon name="tabler:users" class="w-4 h-4" />
                  {course.students}
                </span>
                <div class="flex items-center gap-2 text-orange-500 font-medium text-sm">
                  <span>Ver detalles</span>
                  <Icon name="tabler:arrow-right" class="w-4 h-4 transition-transform group-hover:translate-x-1" />
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Modales para cada curso -->
    {
      courses.map((course, index) => (
        <CourseModal course={course} modalId={`course-modal-${index}`} />
      ))
    }
  </div>

  <CallToAction
    title="¿Listo para comenzar tu próximo curso?"
    subtitle="¡Hablemos sobre cómo podemos trabajar juntos para hacerlo realidad!"
    actions={[
      {
        text: 'Contáctame',
        href: '/contact#form',
      },
    ]}
  />
</Layout>
