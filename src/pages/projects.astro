            src={project.image}
            alt={project.title}
            class:list="w-full object-cover rounded-lg"
            height={400}
            width={300}
            widths={[400, 768]}
            sizes="(max-width: 768px) 100vw, 432px"
          />
          <h3 class="text-xl font-bold mt-4">{project.title}</h3>
          <p class="text-gray-500 mt-2">{project.description}</p>
          <div class="mt-4 flex justify-between">
            <a href={project.view} class="text-orange-500 hover:underline flex gap-1">
              <Icon name="tabler:eye" class="w-6 h-6" />
              View
            </a>
            <a href={project.github} class="text-orange-500 hover:underline flex gap-1">
              <Icon name="tabler:brand-github" class="w-6 h-6" />
              Github
            </a>
          </div>
        </div>
      ))
