---
import { Icon } from 'astro-icon/components';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const translations = {
  en: {
    tagline: 'Full Stack Developer specialized in creating innovative digital solutions with engineering precision.',
    navigation: 'Navigation',
    home: 'Home',
    projects: 'Projects',
    courses: 'Courses',
    blog: 'Blog',
    contact: 'Contact',
    services: 'Services',
    frontendDev: 'Frontend Development',
    backendDev: 'Backend Development',
    database: 'Database Design',
    cadModeling: 'CAD Modeling',
    automation: 'Automation',
    contactTitle: 'Contact',
    available: 'Available for remote projects',
    international: 'International clients',
    rights: 'All rights reserved',
    madeWith: 'Made with passion',
  },
  es: {
    tagline: 'Desarrollador Full Stack especializado en crear soluciones digitales innovadoras con precisión de ingeniería.',
    navigation: 'Navegación',
    home: 'Inicio',
    projects: 'Proyectos',
    courses: 'Cursos',
    blog: 'Blog',
    contact: 'Contacto',
    services: 'Servicios',
    frontendDev: 'Desarrollo Frontend',
    backendDev: 'Desarrollo Backend',
    database: 'Bases de Datos',
    cadModeling: 'Modelado CAD',
    automation: 'Automatización',
    contactTitle: 'Contacto',
    available: 'Disponible para proyectos remotos',
    international: 'Clientes internacionales',
    rights: 'Todos los derechos reservados',
    madeWith: 'Hecho con pasión',
  },
};

const t = translations[lang];
const basePath = lang === 'en' ? '/en' : '/es';
---

<!-- Footer Section ****************** -->
<footer class="bg-gray-900 dark:bg-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 py-12 md:py-16">
    <div class="grid gap-8 md:gap-12 sm:grid-cols-2 lg:grid-cols-4">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <h3 class="text-2xl font-bold text-white mb-4">Jaime Villegas</h3>
        <p class="text-gray-400 leading-relaxed mb-6">
          {t.tagline}
        </p>
        <div class="flex space-x-4">
          <a
            href="https://linkedin.com/in/villegas0296"
            target="_blank"
            class="flex items-center justify-center w-10 h-10 bg-gray-800 hover:bg-orange-600 text-gray-400 hover:text-white rounded-lg transition-colors duration-200"
          >
            <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
          </a>
          <a
            href="https://github.com/jaimevillegas"
            target="_blank"
            class="flex items-center justify-center w-10 h-10 bg-gray-800 hover:bg-orange-600 text-gray-400 hover:text-white rounded-lg transition-colors duration-200"
          >
            <Icon name="tabler:brand-github" class="w-5 h-5" />
          </a>
          <a
            href={lang === 'en' ? 'https://fiverr.com/villegas296' : 'https://es.fiverr.com/villegas296'}
            target="_blank"
            class="flex items-center justify-center w-10 h-10 bg-gray-800 hover:bg-orange-600 text-gray-400 hover:text-white rounded-lg transition-colors duration-200"
          >
            <Icon name="tabler:brand-fiverr" class="w-5 h-5" />
          </a>
        </div>
      </div>

      <!-- Navigation Column -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4 flex items-center">
          <Icon name="tabler:navigation" class="w-5 h-5 text-orange-600 mr-2" />
          {t.navigation}
        </h4>
        <ul class="space-y-3">
          <li>
            <a href={basePath} class="text-gray-400 hover:text-orange-600 transition-colors duration-200 flex items-center">
              <Icon name="tabler:home" class="w-4 h-4 mr-2" />
              {t.home}
            </a>
          </li>
          <li>
            <a href={`${basePath}/projects`} class="text-gray-400 hover:text-orange-600 transition-colors duration-200 flex items-center">
              <Icon name="tabler:briefcase" class="w-4 h-4 mr-2" />
              {t.projects}
            </a>
          </li>
          <li>
            <a href={`${basePath}/courses`} class="text-gray-400 hover:text-orange-600 transition-colors duration-200 flex items-center">
              <Icon name="tabler:book" class="w-4 h-4 mr-2" />
              {t.courses}
            </a>
          </li>
          <li>
            <a href={`${basePath}/blog`} class="text-gray-400 hover:text-orange-600 transition-colors duration-200 flex items-center">
              <Icon name="tabler:pencil" class="w-4 h-4 mr-2" />
              {t.blog}
            </a>
          </li>
          <li>
            <a href={`${basePath}/contact`} class="text-gray-400 hover:text-orange-600 transition-colors duration-200 flex items-center">
              <Icon name="tabler:message" class="w-4 h-4 mr-2" />
              {t.contact}
            </a>
          </li>
        </ul>
      </div>

      <!-- Services Column -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4 flex items-center">
          <Icon name="tabler:settings" class="w-5 h-5 text-orange-600 mr-2" />
          {t.services}
        </h4>
        <ul class="space-y-3">
          <li>
            <span class="text-gray-400 flex items-center">
              <Icon name="tabler:brand-react" class="w-4 h-4 mr-2 text-orange-600" />
              {t.frontendDev}
            </span>
          </li>
          <li>
            <span class="text-gray-400 flex items-center">
              <Icon name="tabler:brand-nodejs" class="w-4 h-4 mr-2 text-orange-600" />
              {t.backendDev}
            </span>
          </li>
          <li>
            <span class="text-gray-400 flex items-center">
              <Icon name="tabler:database" class="w-4 h-4 mr-2 text-orange-600" />
              {t.database}
            </span>
          </li>
          <li>
            <span class="text-gray-400 flex items-center">
              <Icon name="tabler:3d-cube-sphere" class="w-4 h-4 mr-2 text-orange-600" />
              {t.cadModeling}
            </span>
          </li>
          <li>
            <span class="text-gray-400 flex items-center">
              <Icon name="tabler:robot" class="w-4 h-4 mr-2 text-orange-600" />
              {t.automation}
            </span>
          </li>
        </ul>
      </div>

      <!-- Contact Column -->
      <div>
        <h4 class="text-lg font-semibold text-white mb-4 flex items-center">
          <Icon name="tabler:phone" class="w-5 h-5 text-orange-600 mr-2" />
          {t.contactTitle}
        </h4>
        <ul class="space-y-3">
          <li class="text-gray-400 flex items-start">
            <Icon name="tabler:mail" class="w-4 h-4 mr-2 mt-1 text-orange-600 flex-shrink-0" />
            <span class="break-all">jaimevillegas296@gmail.com</span>
          </li>
          <li class="text-gray-400 flex items-start">
            <Icon name="tabler:map-pin" class="w-4 h-4 mr-2 mt-1 text-orange-600 flex-shrink-0" />
            <span>Colombia</span>
          </li>
          <li class="text-gray-400 flex items-start">
            <Icon name="tabler:clock" class="w-4 h-4 mr-2 mt-1 text-orange-600 flex-shrink-0" />
            <span>{t.available}</span>
          </li>
          <li class="text-gray-400 flex items-start">
            <Icon name="tabler:world" class="w-4 h-4 mr-2 mt-1 text-orange-600 flex-shrink-0" />
            <span>{t.international}</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          © 2025 Jaime Villegas. {t.rights}.
        </p>
        <div class="flex items-center space-x-6">
          <div class="flex items-center space-x-2">
            <Icon name="tabler:heart" class="w-4 h-4 text-red-500" />
            <span class="text-gray-400 text-sm">{t.madeWith}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
